<html>

  <table>

   <td>
     <%= render :template => "admin/new_entry" %>
   </td>

   <td>
    <div align = "right">
     <%= form_for("admin#add_new") do |f| %>
       <% @card.errors.any? %>
         <div id = "error explanation" >
           <h2><%= pluralize(@card.errors.count,"error") %></h2>
           <ul>
              <% @card.errors.full_messages.each do |msg| %>
                 <li><%= msg%></li>
              <% end %>
           </ul>
         </div>
     <% end %>
    </div>
   </td>

  </table>

</html>
